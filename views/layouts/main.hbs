        </header>
        {{{body}}}
    </div>
    {{>additional}}
    <script>
        $("#down").click(function(){
         var height = $("body")[0].clientHeight
         var am = 0;
         var inter = setInterval(function(){
            if(height - am > 4){
                window.scroll(0, am);
                am+=4
            } else { 
                window.scroll(0,height)
                clearInterval(inter)
            }
         },1)
     })
     $("#up").click(function(){
         var height = $("body")[0].clientHeight
         var am = Math.floor(window.scrollY);
         var inter = setInterval(function(){
            if(am> 4){
                window.scroll(0, am);
                am-=4
            } else { 
                window.scroll(0,0);
                clearInterval(inter)
            }
         },1)
     })
    </script>
</body>

</html>